<div class='session-body'>
  <div class='session-page'>
    <div class="budget-lady-image">
      <%= image_tag 'budget.jpg', class: 'session-image' %>
    </div>
    <div class='session-form'>
      <h3 class="sign-up-ribbon">Sign up</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <div class="field">
          <%= f.text_field  :name, autofocus: true, autocomplete: "name", class: 'session-form-input', placeholder: 'Name'%>
        </div>

        <div class="field">
            <%= f.label :Avatar %><br />
            <%= f.file_field :avatar, placeholder: 'Avatar', class: 'session-form-input' %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'session-form-input', placeholder: 'Email' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class: 'session-form-input', placeholder: 'Enter Password' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'session-form-input', placeholder: 'Confirm Password' %>
        </div>

        <div class="auth-btn-div">
          <%= f.submit "Sign up", class: 'submit-button' %>
          <%= render "devise/shared/links", class: 'session-sign-up' %>
        </div>

        <% if resource.errors.any? %>
          <div class="error-messages">
            <ul class="error-ul">
              <% resource.errors.full_messages.each do |message| %>
                <li style="color: red"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>
      
    </div>
  </div>
</div>

