<div class="form-div">
  <%= form_with(model: category) do |form| %>
    <h3>Add new category</h3>

    <div>
      <%= form.text_field :name, class: "form-input", placeholder: 'Name'%>
    </div>

    <div>
      <%= form.number_field :limit, class: "form-input", placeholder: 'Limit' %>
    </div>

    <div class="add-category-div">
      <%= form.submit class: "add-category-button" %>
    </div>
  <% end %>
</div>
 
