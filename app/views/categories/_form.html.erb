<div class="">
  <%= form_with(model: category) do |form| %>
    <div>
      <%= form.text_field :name, class: "form-input", placeholder: 'Name'%>
    </div>

    <div>
      <%= form.number_field :limit, class: "form-input", placeholder: 'Limit' %>
    </div>

    <div class="submission-btn-div">
      <%= form.submit class: "submit-button" %>
      <%= link_to "Go Back", request.referrer || root_path, class: "submit-button"  %>
    </div>
  <% end %>
</div>
 
